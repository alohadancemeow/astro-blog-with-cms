---
import New from "../../componenets/New.astro";
import RootLayout from "../../layouts/RootLayout.astro";
import { fetchArticles } from "../../lib/fetch-articles";

export async function getStaticPaths() {
  const articles = await fetchArticles({});

  return articles.map((article) => ({
    params: {
      slug: article?._id,
    },
    props: {
      articleData: article.data,
    },
  }));
}

const { articleData } = Astro.props;
console.log(articleData, "articleData");
---

<RootLayout>
  <div class="three-columns section">
    <div class="span-2">
      <img
        class="h-[417px] w-full object-cover"
        src={`${articleData?.coverImage}`}
        alt="cover-image"
      />

      <div class="py-6 px-4 bg-white shadow-md mx-auto">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">
          {articleData?.title}
        </h1>
        <div class="flex justify-between items-center">
          <p class="text-gray-600 mb-4">
            Written by:
            <span class="font-medium text-blue-600">
              {articleData?.author}
            </span>
          </p>
          <div class="flex items-center mb-4">
            <span class="text-yellow-500 text-lg">&#9733;</span>
            <span class="ml-1 text-gray-700 font-semibold">4.5</span>
          </div>
        </div>
        <div class="flex flex-wrap gap-2">
          {
            articleData?.arraystring.map((tag: string) => (
              <span class="px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-sm">
                {tag}
              </span>
            ))
          }
        </div>
      </div>
      <div class="flow my-8 px-4" set:html={articleData?.body} />
    </div>

    <!-- New articles -->
    <New class="inverted flow h-fit min-h-[579px]" />

    <div class="mt-6">
      <a href="/" class="text-blue-600 hover:underline">‚Üê Back to Home</a>
    </div>
  </div>
</RootLayout>
